{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "fastapi_server:app",      // 如果您的 Python 文件名不是 main.py，请在此替换为您的文件名
                "--host",
                "0.0.0.0",
                "--port",
                "8899",
                "--reload"
            ],
            "env": {    
                // 可以在这里添加环境变量
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "/home/lius/桌面/Screenshot_1730875408.png"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}